# Database (Supabase)
# Pooler connection
DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-REGION.pooler.supabase.com:6543/postgres

# Supabase
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS - Use comma-separated format (NOT JSON array)
# This avoids parsing issues in production
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-frontend-domain.com

# OpenAI API (Optional)
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY
OPENAI_ORGANIZATION=org-YOUR_ORG_ID

# API Keys (Optional)
API_KEYS=your-api-keys

# Application
PROJECT_NAME=Smart Yoram API
VERSION=1.0.0
API_V1_STR=/api/v1

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0

# Firebase (Optional)
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# Admin User
FIRST_SUPERUSER=admin@smartyoram.com
FIRST_SUPERUSER_PASSWORD=changeme

# Naver Maps API (Optional - for geocoding)
# Get your API keys from https://www.ncloud.com/product/applicationService/maps
NAVER_MAPS_CLIENT_ID=YOUR_NAVER_MAPS_CLIENT_ID
NAVER_MAPS_CLIENT_SECRET=YOUR_NAVER_MAPS_CLIENT_SECRET